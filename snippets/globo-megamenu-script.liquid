{% unless canonical_url contains 'apps/menu/preview' %}
<link href="{{ 'v3globomenu.css' | asset_url }}" rel="stylesheet" type="text/css" media="all">
<script>
  var MenuApp = {
    shop 	: '{{ shop.permanent_domain }}',
    menu	: "main-menu",
    themeId	: 801,
    menuClass	: 'globomenu-store-801 globomenu globomenu-main globomenu-horizontal globomenu-transition-fade globomenu-items-align-center  globomenu-trigger-hover globomenu-responsive globomenu-responsive-collapse ',
    mobileBtn	: '<a class="globomenu-responsive-toggle-801 globomenu-responsive-toggle globomenu-responsive-toggle-content-align-center"><i class="fa fa-bars"></i>Menu</a>',
    linkLists	: {
      {% for list in linklists %}
        '{{ list.handle }}':{
		  title : "{{ list.title | replace: '"', '\"' | strip_html }}",
    	  items : [{% for link in linklists[list.handle].links %}"{{ link.url | replace: '"', '\"' }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
    	  names : [{% for link in linklists[list.handle].links %}"{{ link.title | replace: '"', '\"' | strip_html }}"{% unless forloop.last %},{% endunless %}{% endfor %}]
      	}{% unless forloop.last %},{% endunless %}
      {% endfor %}
  	}
  };
</script>
{% include 'globo-megamenu' %}
<script src="{{ 'v3globomenu.js' | asset_url }}" type="text/javascript"></script>
<script>MenuApp.init();</script>
{% endunless %}
